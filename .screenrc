startup_message off
defscrollback 5000

# Split screen into 3 
# typically for editor / repl / terminal
layout three
screen  
split -v
focus
screen
split
focus
screen 



# Display status at the bottom
hardstatus on
hardstatus alwayslastline
hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}%+w %=%{..G} %H %{..Y} %m/%d %C%a "
